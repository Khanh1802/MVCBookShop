@model ProductVM
@*Margin Top Utilities*@
<div class="border p-3 mt-4">
    @*Padding Bottom Utilities*@
    <div class="row pb-2">
        <h2 class="text-primary">@(Model.Product.Id == null || Model.Product.Id == Guid.Empty ? "Create" : "Update") Product</h2>
        </hr>
    </div>
</div>
<div class="card-body p-4">
    <form method="post" class="row" enctype="multipart/form-data">
        <input asp-for="Product.Id" hidden />
        <div class="row">
            <div class="col-10">

                <div class="border-3">
                    <div class="mb-3">
                        <label> Product Title</label>
                        <input asp-for="Product.Title" class="form-control"> @*full width*@
                        <span asp-validation-for="Product.Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label> Product Description</label>
                        <input asp-for="Product.Description" class="form-control"> @*full width*@
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label> Product ISBN</label>
                        <input asp-for="Product.ISBN" class="form-control"> @*full width*@
                        <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label> Product Author</label>
                        <input asp-for="Product.Author" class="form-control"> @*full width*@
                        <span asp-validation-for="Product.Author" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label> Product List Price</label>
                        <input asp-for="Product.ListPrice" class="form-control"> @*full width*@
                        <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label> Product Price 1-49</label>
                        <input asp-for="Product.Price" class="form-control"> @*full width*@
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label> Product Price 50-99</label>
                        <input asp-for="Product.Price50" class="form-control"> @*full width*@
                        <span asp-validation-for="Product.Price50" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label> Product Price 100+</label>
                        <input asp-for="Product.Price100" class="form-control"> @*full width*@
                        <span asp-validation-for="Product.Price100" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label> Product Image Url</label>
                        <input type="file" name="file" class="form-control"> @*full width*@
                    </div>

                    <div class="mb-3">
                        <label> Category Id</label>
                        @*use asp-item show item in ViewBag value and "ViewBag to extract with Key"*@
                        @*<select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">*@
                        <select asp-for="Product.CategoryId" asp-items="@Model.Categories" class="form-select">
                            @*disable make select default with null value*@
                            <option disabled selected>--Select category--</option>
                        </select> @*full width*@
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.Product.ImageUrl" width="100%"/>
            </div>
        </div>
        @*Responsive bottom margin classes. * can be sm, md, lg or xl. # can be a number between 0 and 5*@

        <div class="row">
            <div class="col-6 col-md-3">
                @if (Model.Product.Id == null || Model.Product.Id == Guid.Empty)
                {
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                }
            </div>

            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">
                    Back to list
                </a>
            </div>
        </div>
    </form>
</div>