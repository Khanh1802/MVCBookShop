@model List<Product> // low charater
@* containing element to wrap site contents*@
<div class="container">
    @*pt = padding top,Row = Container for responsive columns*@
    <div class="row pt-4">
        @*Responsive grid (span 1-12 column).*@
        <div class="col-6">
            @*Blue text color*@
            <h2 class="text-primary">Product List</h2>
        </div>
        @*Responsive grid (span 1-12 column).*@
        <div class="col-6 text-end">
            @*Change page*@
            <a asp-controller="Product" asp-action="Create" class="=btn">
                <i class="bi bi-plus-circle"></i> Create Product
            </a>
        </div>
    </div>
</div>

@*Adds basic styling to a table https://www.w3schools.com/bootstrap/tryit.asp?filename=trybs_table_basic&stacked=h*@
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    ISBN
                </th>
                <th>
                    Author
                </th>
                <th>
                    List Price
                </th>
                <th>
                    Price 1-49
                </th>
                <th>
                    Price 50-99
                </th>
                <th>
                    Price 100+
                </th>
            </tr>
        </thead>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Title</td>
                <td>@obj.Description</td>
                <td>@obj.ISBN</td>
                <td>@obj.Author</td>
                <td>@obj.ListPrice</td>
                <td>@obj.Price</td>
                <td>@obj.Price50</td>
                <td>@obj.Price100</td>
                <td>
                    <div class="btn-group">
                        @*asp-route-id return id*@ @*mx-# Responsive left and right margin auto (horizontal) classes.
                    * can be sm, md, lg or xl. # can be a number between 0 and 5*@
                        @*asp-route-id return id  and id is name in method*@ @*pass id through a link below*@
                        <a asp-controller="Product" asp-action="Update" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Update
                        </a>

                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
        <tbody>
        </tbody>
    </table>
</div>